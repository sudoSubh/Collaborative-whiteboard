{
  "name": "collaborative-whiteboard",
  "version": "1.0.0",
  "description": "A real-time collaborative whiteboard application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "cd client && npm run build",
    "build:prod": "cd client && npm run build:prod",
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "cd client && rm -rf node_modules dist && cd ../server && rm -rf node_modules",
    "lint": "cd client && npm run lint",
    "lint:fix": "cd client && npm run lint:fix"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "your-repo-url"
  },
  "keywords": [
    "whiteboard",
    "collaborative",
    "real-time",
    "socket.io",
    "react",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}